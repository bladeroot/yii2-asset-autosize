    "require": {
        "yiisoft/yii2": "~2.0",
        "bower-asset/autosize": "3.0.13"
    },
    "autoload": {
        "psr-4": {
            "hiqdev\\assets\\autosize\\": "src"
        }
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
